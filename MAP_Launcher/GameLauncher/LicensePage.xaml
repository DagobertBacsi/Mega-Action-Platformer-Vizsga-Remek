<Window x:Class="MAP_Launcher.LincensePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MAP_Launcher"
        mc:Ignorable="d"
        Title="Licensz Ellenőrzés" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#f5f7fa" BorderBrush="Black"
        WindowStyle="None">

    <Grid>
        <!-- Bezárás ikon -->
        <Button x:Name="CloseButton" Content="✖" 
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Width="30" Height="30" FontSize="14"
                Background="Transparent" Foreground="Black"
                BorderThickness="0" Cursor="Hand"
                Click="CloseButton_Click"/>

        <Label Content="MAP - Lincensz"/>
        <!-- Licensz beviteli mező -->
        <TextBlock Text="Írja be a licensz kulcsot:" 
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   Margin="0,60,0,0" FontSize="14" Foreground="#333"/>

        <TextBox x:Name="LicenseKeyTextBox"
                 Width="250" Height="30"
                 HorizontalAlignment="Center" VerticalAlignment="Top"
                 Margin="0,90,0,0"
                 BorderBrush="#0070ba" BorderThickness="1"
                 Padding="5"/>

        <!-- Ellenőrző gomb -->
        <Button x:Name="BtnValidate"
                Content="Ellenőrzés"
                Width="120" Height="35"
                Background="#0070ba" Foreground="White"
                FontSize="14" FontWeight="Bold"
                BorderThickness="0" Cursor="Hand"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Margin="0,140,0,0"
                Click="BtnValidate_Click"/>
    </Grid>
</Window>
